<% include header %>


<div class="container-fluid">
  <div class="row-fluid">
    <legend>Appel d'offre</legend>
    <form action="/offre" method="post" enctype="multipart/form-data">
      <input type="hidden" name="form" value="offre">
      <div class="form-group control-group col-md-2">
        <label for="selectMenu" class="control-label">Ann√©e :</label>
        <select id="selectMenu" class="custom-select" name="annee">

          <%a=new Date().getFullYear();for (var i = a; i < a+3; i++){b=i+1;%>
            <option value="<%-i%>-<%-b%>"><%-i%>-<%-b%></option>
            <%}%>

          </select>
        </div>


        <div class="form-group control-group col-md-3">
          <label class="control-label">Somme :</label>
          <div  class="btn-group btn-group-toggle" data-toggle="buttons" id="sumselector">
            <label id="radio1" class="btn btn-secondary btn-sm">
              <input type="radio" name="workflow" id="defaultGroupExample1" autocomplete="off" value ="6"> Moins de 5K
            </label>
            <label id="radio2" class="btn btn-secondary btn-sm">
              <input type="radio" name="workflow" id="defaultGroupExample2" autocomplete="off" value ="7"> Entre 5K et 25K
            </label>
            <label id="radio3" class="btn btn-secondary btn-sm">
              <input type="radio" name="workflow" id="defaultGroupExample3" autocomplete="off" value ="8"> Entre 25K et 90K
            </label>
            <label id="radio4" class="btn btn-secondary btn-sm">
              <input type="radio" name="workflow" id="defaultGroupExample4" autocomplete="off" value ="9"> Plus de 90K
            </label>
          </div>
        </div>

        <div class="form-group control-group col-md-3" id="doc1" hidden="true">
           <div class="custom-file">
               <input type="file" name="docs" class="custom-file-input" lang="fr" id="inputGroupFile02" >
               <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Devis 1</label>
            </div>
        </div>
        </div>
        <div class="form-group control-group col-md-3" id="doc2" hidden="true">
           <div class="custom-file">
               <input type="file" name="docs" class="custom-file-input input-group-sm mb-3" id="inputGroupFile02" lang="fr">
               <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Devis 2</label>
           </div>
        </div>

        <div class="form-group control-group col-md-3" id="doc3" hidden="true">
           <div class="custom-file">
                <input type="file" name="docs" class="custom-file-input" id="inputGroupFile02" lang="fr">
                <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Devis 3</label>
            </div>
        </div>

        <div class="form-group control-group col-md-3" id="doc4" hidden="true">
           <div class="custom-file">
               <input type="file" name="docs" class="custom-file-input" id="inputGroupFile02" lang="fr">
               <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">RIB</label>
           </div>
        </div>

        <div class="form-group control-group col-md-3" id="doc5" hidden="true">
           <div class="custom-file">
               <input type="file" name="docs" class="custom-file-input" id="inputGroupFile02" lang="fr">
               <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">PTF</label>
           </div>
        </div>

        <div class="form-group control-group col-md-3" id="doc6" hidden="true">
             <div class="custom-file">
                 <input type="file" name="docs" class="custom-file-input" id="inputGroupFile02" lang="fr">
                 <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Publication</label>
             </div>
        </div>
        <div class="form-group control-group col-md-3">
          <button type="submit" class="btn btn-primary">Valider</button>
        </div>
      </div>
    </form>
  </div>
</div>
<script type="text/javascript">

  $('.custom-file input').change(function (e) {
      var files = [];
      for (var i = 0; i < $(this)[0].files.length; i++) {
          files.push($(this)[0].files[i].name);
      }
      $(this).next('.custom-file-label').html(files.join(', '));
  });

</script>
