<script type="text/javascript">
$(document).ready( function () {  
  	
	var dataT= [["Cours","M2I","12","Heure","7","20%"]];
  
    var t=$('#tableAnnexe').DataTable({
        "data": dataT,
		"columns": [
            { "title": "Designation" },
            { "title": "Formation" },
            { "title": "Taux horaire" },
            { "title": "Unite" },
            { "title": "Quantite" },
            { "title": "TVA" }
        ],
		"paging":   false,
        "ordering": false,
        "info":     false
    });
	
	$('#addRow').on( 'click', function () {
        document.getElementById("valider").style.display = "block";
		t.row.add( [
            '.1',
            '.2',
            '.3',
            '.4',
            '.5',
			'.6'
        ] ).draw();
    } );

	$('#valider').on( 'click', function () {
        document.getElementById("valider").style.display = "none";
		});
	
	$('#tablePresta').DataTable({
        "columns": [
            { "title": "Responsable" },
